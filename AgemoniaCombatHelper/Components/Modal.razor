@namespace AgemoniaCombatHelper.Components
<div class="modal @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <CascadingValue Value="Body">
                    @Body
                </CascadingValue>
            </div>
            @if (Footer is not null)
            {
                <div class="modal-footer">
                    @Footer
                </div>
            }
        </div>
    </div>
</div>

@if (showBackdrop) {
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public RenderFragment? Title { get; set; }
    [Parameter]
    public RenderFragment? Body { get; set; }
    [Parameter]
    public RenderFragment? Footer { get; set; }

    [CascadingParameter]
    protected string modalDisplay { get; set; } = "none;";
    [CascadingParameter]
    protected string modalClass { get; set; }= "";
    [CascadingParameter]
    protected bool showBackdrop { get; set; }= false;

    public void Open()
    {
        modalDisplay = "block;";
        modalClass = "show";
        showBackdrop = true;
        StateHasChanged();
    }
    public void Close()
    {
        modalDisplay = "none;";
        modalClass = "show";
        showBackdrop = false;
        StateHasChanged();
    }
}
