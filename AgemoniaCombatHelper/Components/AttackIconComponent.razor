@if (Value != 0)
{
    <div class="icon-container">
        <img src="@IconUrl" />
        <p>@Value</p>
    </div>
}
else
{
    <img src="@IconUrl" />
}

@code {
    [Parameter]
    public string? IconUrl { get; set; }
    [Parameter]
    public int Value { get; set; }
    protected override void OnParametersSet()
    {
        IconUrl += ".png";
        base.OnParametersSet();
    }
}
